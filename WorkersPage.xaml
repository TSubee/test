<Page x:Class="Ateler.WorkersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ateler"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WorkersPage" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Найти:" FontSize="16"></TextBlock>
            <TextBox Width="300" FontSize="16" Name="SearchTbox" TextChanged="SearchTbox_TextChanged"></TextBox>
        
        </StackPanel>
        <ListView Grid.Row="1" Name="UsersListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Label Content="{Binding CodeUser}" ContentStringFormat="Код: {0}"></Label>
                        <Label Content="{Binding LoginUser}" ContentStringFormat="Login: {0}"></Label>

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>    
    </Grid>
</Page>
