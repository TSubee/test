<Page x:Class="Ateler.MenuAdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ateler"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuAdminPage" Background="White" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Label HorizontalAlignment="Right" VerticalAlignment="Top" Name="User"></Label>
        <StackPanel VerticalAlignment="Center">
            <Button ToolTip="Открытие окна добавления услуги" Name="AddService" Click="AddService_Click"  Height="30" Width="200" FontSize="22" Background="AliceBlue" Margin="5" Content="Добавить услугу"></Button>
            <Button Name="Services" Click="Services_Click" Height="30" Width="350" FontSize="22" Background="AliceBlue"  Content="Посмотреть данные об услугах" Margin="5"></Button>
            <Button Name="Workers" Click="Workers_Click" Height="30" Width="400" FontSize="22" Background="AliceBlue"  Content="Посмотреть данные о сотрудниках" Margin="5"></Button>

        </StackPanel>
    </Grid>
</Page>
